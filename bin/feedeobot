#!/usr/bin/env nodemon

process.on('SIGINT', function () {
    feedeobot.stop(function () {
            process.exit(0);
    });
});

process.on('exit', function (code) {
});

process.on('uncaughtException', function (exception) {
    console.error(exception.message);
    process.exit(1);
})

var feedeobot = require('../lib/feedeobot');

try {
    feedeobot.start(function () {
    });
} catch (exception) {
    console.error(exception.message);
    process.exit(1);
}
